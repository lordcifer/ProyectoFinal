@model IEnumerable<SistemaFacturaciones.Models.Producto>

<h2>Productos</h2>

<p>
    @Html.ActionLink("Registrar Producto", "Create", "", new { @class = "btn btn-default" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Proveedores")
        </th>
        <th>
            @Html.DisplayName("Productos")
        </th>
        <th>
            @Html.DisplayName("Precios")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedore.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
